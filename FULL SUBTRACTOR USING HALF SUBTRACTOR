// Design Code

module half_subtractor(input a,b,output difference,borrow);
assign difference=a^b;
assign borrow=(!a)&(b);
endmodule

module full_sub_half_subtractor(input a,b, bin,output difference,borrow);
wire w1,w2,w3;
half_subtractor h1(a,b,w1,w2);
half_subtractor h2(w1,bin,difference,w3);
assign borrow=w2|w3;
endmodule

//Testbench

module full_sub_half_subtractor_tb();
reg a,b,bin;
wire borrow,difference;
integer i;
full_sub_half_subtractor dut(a,b,bin,borrow,difference);

initial
begin
for(i=0;i<8;i=i+1)
begin
{a,b,bin}=i;
#10;
$display("Time=%t |a=%b |b=%b | bin=%b | difference=%b |borrow=%b ",$time,a,b,bin,difference,borrow);
end
$finish();
end
endmodule

